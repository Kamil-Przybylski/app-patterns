{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@admin": ["apps/admin/src/app"],
      "@libs/nest/configuration": ["libs/nest/configuration/src/index.ts"],
      "@libs/nest/database": ["libs/nest/database/src/index.ts"],
      "@libs/nest/events": ["libs/nest/events/src/index.ts"],
      "@libs/nest/microservices": [
        "libs/nest/microservices/src/index.ts"
      ],
      "api": ["apps/api/src/app"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
