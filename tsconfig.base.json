{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/nest/auth": ["libs/nest/auth/src/index.ts"],
      "@libs/nest/config": ["libs/nest/config/src/index.ts"],
      "@libs/nest/database": ["libs/nest/database/src/index.ts"],
      "@libs/nest/events": ["libs/nest/events/src/index.ts"],
      "@libs/nest/microservices": ["libs/nest/microservices/src/index.ts"],
      "@libs/ng/authentication/data-access": [
        "libs/angular/authentication/data-access/src/index.ts"
      ],
      "@libs/ng/authentication/models": ["libs/angular/authentication/models/src/index.ts"],
      "@libs/ng/authentication/ui": ["libs/angular/authentication/ui/src/index.ts"],
      "@libs/ng/authentication/utils": ["libs/angular/authentication/utils/src/index.ts"],
      "@libs/ng/core/auth": ["libs/angular/core/auth/src/index.ts"],
      "@libs/ng/core/config": ["libs/angular/core/config/src/index.ts"],
      "@libs/ng/core/store": ["libs/angular/core/store/src/index.ts"],
      "@libs/ng/utils": ["libs/angular/utils/src/index.ts"],
      "@libs/shared/communication": ["libs/shared/communication/src/index.ts"],
      "@libs/shared/tokens": ["libs/shared/tokens/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
